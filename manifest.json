{
	"manifest_version": 2,
	
	"name": "AutoZoom",
	"short_name": "AutoZoom",
	"description": "AutoZoom",
	"author": "Alexis Richard",
	"version": "0.0.1",
	
	"permissions": [
		"https://www.dealertrack.com/*",
		"https://app.autozoom.com/*",
		"storage",
		"tabs"
	],

	"background": {
		"scripts": [
			"js/jquery.js",
			"js/background.js"
		]
	},
	"content_scripts": [
		{
			"js": [
				"js/jquery.js",
				"js/dealertrack.js"
			],
			"matches": [
				"https://www.dealertrack.com/*"
			]
		},
		{
			"js": [
				"js/jquery.js",
				"js/autozoom.js"
			],
			"matches": [
				"https://app.autozoom.com/*"
			]
		}
	],
	"page_action": {
		"default_icon": {
			"19": "img/32.png",
			"38": "img/32.png"
		},
		"default_title": "AutoZoom",
		"default_popup": "pages/popup.html"
	},
	"web_accessible_resources": [
	],

	"icons": {
		"16": "img/16.png",
		"18": "img/18.png",
		"19": "img/19.png",
		"32": "img/32.png",
		"38": "img/38.png",
		"48": "img/48.png",
		"64": "img/64.png",
		"96": "img/96.png",
		"128": "img/128.png"
	}
}